<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".LoguinActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:src="@drawable/logo1"
                android:foregroundGravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ReportAcademic"
                android:textColor="#ffff"
                android:textSize="46sp"
                android:paddingTop="170dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="cursive"/>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="10dp"
            android:paddingTop="290dp"
            android:foregroundGravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#70ffffff"
                android:layout_gravity="center_vertical"
                android:foregroundGravity="center_horizontal"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:drawableStart="@mipmap/ic_launcher_documento"
                    android:background="#fff"
                    android:inputType="text"
                    android:padding="6dp"
                    android:hint="@string/documento"
                    android:textColor="#808080"
                    android:textSize="16sp"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/ic_launcher_clave"
                    android:background="#fff"
                    android:inputType="numberPassword"
                    android:padding="6dp"
                    android:hint="@string/ContraseÃ±a"
                    android:textColor="#808080"
                    android:textSize="16sp">

                </EditText>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#508BC34A"
                    android:layout_marginHorizontal="20dp"
                    android:text="@string/loguin"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:typeface="sans"
                    android:onClick="onClick"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="text"
                    android:padding="6dp"
                    android:paddingLeft="40dp"
                    android:text="Crear cuenta"
                    android:textColor="#FFF"
                    android:textSize="12dp"
                    android:onClick="CrearCuenta"/>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>